{% extends 'base.html.twig' %}

{% block title %}
	<title>Catégorie</title>
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<form class="container w-50 mt-4 mb-5">
			<div class="row">
				<h1>Vues des categories</h1>
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Catégories</th>
							<th scope="col">Modification</th>
							<th scope="col">Suppression</th>
						</tr>
					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<th scope="row">{{ categorie.id }}</th>
								<td>{{ categorie.categorie }}</td>
								<td>
									<a class="btn btn-primary" href="{{ path('app_categorie_modif', {'id': categorie.id }) }}" role="button">Modify</a>
								</td>
								<td>
									<a class="btn btn-primary" href="{" role="button">delete</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	{% endblock %}
