{% extends 'base.html.twig' %}

{% block title %}Montres pour enfant!{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-3 mb-4">Montres pour enfant</h1>
    <div class="row">
    {% for produit in produits %}
<div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{ asset(produit.image) }}" alt="{{ produit.name }}" class="card-img-top"> 
                    <div class="card-body" class="body-produit">
                        <h5 class="card-title">{{ produit.name }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{path('app_ajouter_panier', {'produitId': produit.id}) }}" class="btn btn-dark">Panier</a>
                            <span class="h5 mt-auto">{{ produit.price }} â‚¬</span>
                            {% if produit.stock > 1 %}
                             <p>disponible</p> 
                            {% else %}
                            <p>Pas disponible</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>    

  
{% endblock %} 


