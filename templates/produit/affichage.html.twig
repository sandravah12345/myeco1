{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/Users/sandravahtel/Desktop/certif/myecomontre1/src/Controller/ProduitController.php'|file_link(0) }}">src/Controller/ProduitController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/Users/sandravahtel/Desktop/certif/myecomontre1/templates/produit/affichage.html.twig'|file_link(0) }}">templates/produit/index.html.twig</a></code></li>
    </ul>
</div>

<div class="container">
    <h1 class="mt-3 mb-4">Montres</h1>
    <div class="row">
    {% for produit in produits %}
<div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{ asset(produit.image) }}" alt="{{ produit.name }}" class="card-img-top"> 
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.name }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="#" class="btn btn-dark">Panier</a>
                            <span class="h5 mt-auto">{{ produit.price }} €</span>
                            {% if produit.stock > 1 %}
                             <p>disponible</p> 
                            {% else %}
                            <p>Pas disponible</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_modif', {'id': produit.id }) }}">
			<button type="submit" class="btn btn-primary"><i class="fa fa-pen" aria-hidden="true"></i></button>
		        </a>
        {% endif %}  
       
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_delete_produit', {'id': produit.id }) }}?token={{ csrf_token('supprimer') }}" role="button" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                
         {% endif %}
        {% endfor %}

    </div>
</div>      
{% endblock %}


  

